		<java classname="client.TspClient" fork="true">
			<jvmarg value="-Djava.rmi.server.codebase=${client_web_codebase}"/>
			<jvmarg value="-Djava.security.policy=policy/policy"/>
			<arg value="snoopy.cs.ucsb.edu:2672"/>
			<classpath>
